<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <!-- Github -->
  <remote  name="github"
           fetch="https://github.com/" />

  <remote  name="gitlab"
           fetch="https://gitlab.com/" />

  <!-- Projects -->
  <remote name="mist" 
          fetch="https://github.com/Project-Mist-OS"
          revision="cp" />

  <project path="android" name="manifest" remote="mist" />
  <project path="build/make" name="build" groups="pdk"  remote="mist" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <project path="build/soong" name="build_soong" groups="pdk,tradefed" remote="mist" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>

  <!-- device repos -->
  <project path="device/mist/sepolicy" name="android_device_mist_sepolicy" remote="mist" />

  <!-- external repos -->
  <project path="external/cronet" name="CipherOS/android_external_cronet" groups="pdk" remote="gitlab" revision="fourteen" clone-depth="1" />
  <project path="external/e2fsprogs" name="external_e2fsprogs" groups="pdk" remote="mist" />
  <project path="external/mksh" name="external_mksh" groups="pdk" remote="mist" />
  <project path="external/selinux" name="external_selinux" groups="pdk" remote="mist" />

  <!-- framework repos -->
  <project path="frameworks/av" name="frameworks_av" groups="pdk" remote="mist" />
  <project path="frameworks/base" name="frameworks_base" groups="pdk-cw-fs,pdk-fs" remote="mist" />
  <project path="frameworks/native" name="frameworks_native" groups="pdk" remote="mist" />
  <project path="frameworks/opt/net/wifi" name="frameworks_opt_net_wifi" groups="pdk" remote="mist" />

  <!-- hardware repos -->
  <project path="hardware/interfaces" name="hardware_interfaces" groups="pdk" remote="mist" />

  <!-- packages repos -->
  <project path="packages/apps/Settings" name="packages_apps_Settings" groups="pdk-fs" remote="mist" />
  <project path="packages/apps/ThemePicker" name="packages_apps_ThemePicker" groups="pdk-fs" remote="mist" />
  <project path="packages/apps/WallpaperPicker2" name="packages_apps_WallpaperPicker2" groups="pdk" remote="mist" />
  <project path="packages/apps/Launcher3" name="packages_apps_Launcher3" groups="pdk-fs" remote="mist" />

  <!-- prebuilt repos -->
  <project path="prebuilts/tools-extras" name="prebuilts_tools-extras" remote="mist" />

  <!-- system repos -->
  <project path="system/core" name="system_core" remote="mist" />
  <project path="system/sepolicy" name="system_sepolicy" remote="mist" />
  <project path="system/update_engine" name="system_update_engine" remote="mist" />

  <!-- vendor repos -->
  <project path="vendor/mist" name="vendor_mist" remote="mist" />
  <project path="vendor/SystemUIClocks" name="vendor_SystemUIClocks" remote="mist" />
  <project path="vendor/partner_gms" name="CipherOS/vendor_partner-gms" remote="gitlab" revision="udc" clone-depth="1" />

</manifest>
